@model CategoriaDto
<style type="text/css">
    .video-frame {
        width: 375px;
        /*height: 199px;*/
        border: 4px solid #dc3545;
        box-shadow: 2px 4px 6px #dc3545;
        border-radius: 3px;
        /*justify-content: center;*/
    }

    .title {
        font-weight: 500;
        font-size: 14px;
        text-align: center;
        margin-bottom: 10px;
        margin-top: 10px;
        background-color: #dc3545;
        color: white;
        box-shadow: 1px 2px 4px #dc3545;
    }
</style>

<h4>Categoria</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.NombreCategoria)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.NombreCategoria)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Descripcion)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Descripcion)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.PictureFullPath)
    </dt>
    <dd class="col-sm-10">
        <div class="zoom">
            <img src="@Model.PictureFullPath" style="height:100px; max-width:100px;  border-radius:50px;justify-content: center;"/>
        </div>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.VideoFullPath)
    </dt>
    <dd class="col-sm-10">
        <div class="title">@Model.NombreCategoria</div>
        <div class="video-frame">
            <video style="width:100%; height:auto;" controls>
                <source src="@Url.Content(@Model.VideoFullPath)" type="video/mp4" />
            </video>
        </div>
    </dd>
</dl>
