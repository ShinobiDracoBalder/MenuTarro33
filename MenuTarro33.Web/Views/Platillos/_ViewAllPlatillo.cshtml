@model IEnumerable<PlatilloDto>

<table class="table table-striped table-responsive-md table-bordered smfont" id="ProductsTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlatillo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TbCategoria.NombreCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureFullPath)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("Create", "Platillos", new { }, Context.Request.Scheme)' , 'Nuevo Platillo')" class="btn btn-sm btn-outline-primary text-dark"><i class="fa fa-plus-circle"></i> Platillo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Platillos" asp-route-Id="@item.PlatilloId" class="btn btn-outline-secondary">@Html.DisplayFor(modelItem => item.NombrePlatillo)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TbCategoria.NombreCategoria)
                </td>
                <td>
                    <div class="zoom">
                        <img src="@item.PictureFullPath" style="width:100px;" />
                    </div>
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("Edit", "Platillos", new { id = item.PlatilloId }, Context.Request.Scheme)' , 'Actualizar Producto')" class="btn btn-sm btn-warning"><i class="fa fa-pencil-alt"></i> </a>
                    <button data-id="@item.PlatilloId" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
